        <ul>
            @foreach (var course in Model)
            {
                <li>
                    @course.DateTime.ToString("dd/MM/yyyy HH:mm") - @course.Name
                </li>
            }
        </ul>

        <ul class="course">
            @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>

                        <div class="day">
                            @course.DateTime.Tostring("dd")
                        </div>
                    </div>

                    <div class="detail">
